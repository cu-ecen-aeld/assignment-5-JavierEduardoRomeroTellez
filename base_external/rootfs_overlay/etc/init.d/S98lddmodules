#!/bin/sh

case "$1" in
    start)
        echo "Starting ldd modules"
        cd /lib/modules/$(uname -r)/extra/
        /usr/sbin/scull_load
        /usr/sbin/module_load faulty
        modprobe hello
        ;;
    stop)
        echo "Stopping ldd modules"
        cd /lib/modules/$(uname -r)/extra/
        /usr/sbin/scull_unload
        /usr/sbin/module_unload faulty
        rmmod hello
        ;;
    *)
        echo "Usage: $0 {start|stop}"
    exit 1
esac

exit 0
